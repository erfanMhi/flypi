{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "components": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Unique identifier for the component"
            },
            "type": {
              "type": "string",
              "description": "The type of component (e.g., battery, resistor, led)"
            }
          },
          "required": ["id", "type"],
          "additionalProperties": false
        },
        "description": "List of components in the circuit"
      },
      "connections": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "component": {
              "type": "string",
              "description": "ID of the component making the connections"
            },
            "connections": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "ID of a connected component"
              },
              "description": "List of IDs of components this component is connected to"
            }
          },
          "required": ["component", "connections"],
          "additionalProperties": false
        },
        "description": "List of connections for each component, referencing IDs"
      }
    },
    "required": ["components", "connections"],
    "additionalProperties": false
  }
  